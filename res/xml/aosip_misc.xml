<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/misc_title" >

    <Preference
        android:title="@string/app_ops_settings"
        android:persistent="false"
        android:fragment="com.android.settings.applications.AppOpsSummary"/>

    <PreferenceScreen
        android:key="expanded_desktop"
        android:title="@string/expanded_desktop_category"
        android:fragment="com.android.settings.applications.ExpandedDesktopPreferenceFragment" />

    <PreferenceScreen
        android:key="density_changer"
        android:title="@string/lcd_density_title"
        android:fragment="com.android.settings.aosip.advanced.Density" />

    <ListPreference
        android:key="media_scanner_on_boot"
        android:title="@string/media_scanner_on_boot_title"
        android:entries="@array/media_scanner_on_boot_entries"
        android:entryValues="@array/media_scanner_on_boot_values"
        android:persistent="false" />

    <ListPreference
        android:key="pref_scrollingcache"
        android:dialogTitle="@string/pref_scrollingcache_title"
        android:title="@string/pref_scrollingcache_title"
        android:summary="@string/pref_scrollingcache_summary"
        android:entries="@array/entries_scrollingcache"
        android:entryValues="@array/values_scrollingcache" />

    <PreferenceScreen
        android:id="@+id/system_app_remover"
        android:title="@string/system_app_remover"
        android:fragment="com.android.settings.aosip.advanced.SystemappRemover" />

    <com.android.settings.preference.SystemSettingSwitchPreference
        android:key="disable_fc_notifications"
        android:title="@string/disable_fc_notifications_title"
        android:summary="@string/disable_fc_notifications_summary"
        android:defaultValue="false" />

</PreferenceScreen>

